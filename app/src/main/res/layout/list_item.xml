<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    android:elevation="6dp"
    app:cardElevation="6dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        tools:context=".MainActivity"
        android:orientation="horizontal"
        >

            <TextView
                android:id="@+id/listItem_LBL_name"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="30sp"
                android:text="No Item"
                 />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/listItem_LBL_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:ellipsize="end"
                android:maxLines="5"
                android:layout_centerHorizontal="true"
                android:text="amount"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/listItem_RTB_redHearts"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:theme="@style/RatingBarGreenStars"
                android:rating="3.5"
                android:layout_below="@id/listItem_LBL_amount"
                />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/listItem_RTB_blackHearts"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/listItem_RTB_redHearts"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:theme="@style/RatingBarBlackHearts"
                android:rating="2" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/listItem_RTB_greenStars"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/listItem_RTB_blackHearts"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:theme="@style/RatingBarRedHearts"
                android:rating="2" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="fill"
            >

            <TextView
                android:id="@+id/listItem_LBL_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:ellipsize="end"
                android:maxLines="5"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/main_BTN_readMore"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listItem_LBL_info"
                android:layout_alignEnd="@id/listItem_LBL_info"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="10dp"
                android:minHeight="10dp"
                android:text="@string/read"
                android:textColor="@color/orange_500"
                android:textSize="12sp" />

        </RelativeLayout>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>